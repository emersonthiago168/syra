<body class="body-lr"></body>

<div class="container-lr">
    <form action="/login" method="post">
        <h1 class="h1-lr">Iniciar sessÃ£o</h1>

        <div class="input-lr">
            <label for="email"></label>
            <input placeholder="E-mail" name="email" type="email" required />
            <img width="20" height="20" src="https://img.icons8.com/?size=100&id=12580&format=png&color=000000"
                alt="lock" />
        </div>

        <div class="input-lr">
            <label for="password"></label>
            <input placeholder="Senha" name="password" type="password" required />
