        </div>

        <!-- MESSAGES -->
        <div class="container-messages">
            {{#if messages.message}}
            <div class="message">
                {{messages.message}}
            </div>
            {{/if}}
        </div>

        <div class="link-lr">
            <a href="#">Esqueci minha senha</a>
        </div>

        <button type="submit" class="submit-button">Entrar</button>
    </form>

    <div class="register">
